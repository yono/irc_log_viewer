<!DOCTYPE html>
<html>
<head>
  <title>IrcLogViewer</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
    $(function() {
      $("tr:even").addClass("even");
    });
  </script>
</head>
<body>

<div id="body">

<div id="header">
<h1>IRC Log Viewer</h1>
</div>

<div id="sidebar">
<h2>Channel List</h2>
<ul>
<% Channel.all.each do |channel| %>
<li><%= link_to truncate(channel.name), channel%></li>
<% end %>
</ul>
</div>

<div id="main">
<%= yield %>
</div>

<div id="hooter">
</div>

</div>

</body>
</html>
